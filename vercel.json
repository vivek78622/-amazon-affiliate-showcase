{
  "version": 2,
  "buildCommand": "npm ci --legacy-peer-deps && npm run build",
  "installCommand": "npm ci --legacy-peer-deps",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm ci --legacy-peer-deps && npm run build",
        "installCommand": "npm ci --legacy-peer-deps",
        "outputDirectory": ".next"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NPM_FLAGS": "--legacy-peer-deps"
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
} 